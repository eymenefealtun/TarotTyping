                </ComboBox>
            </StackPanel>


            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <StackPanel Width="800"
                            Height="60"
                            Orientation="Horizontal"
                            x:Name="stckPanel1"
                            Background="White">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Margin"
                                    Value="10,0,0,0" />

                        </Style>
                    </StackPanel.Resources>


                </StackPanel>

                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Width="{Binding Width, ElementName=stckPanel1}"
                            Height="60"
                            x:Name="stckPanel2"
                            Background="White">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Margin"
                                    Value="10,0,0,0" />

                        </Style>
                    </StackPanel.Resources>

                </StackPanel>

                <StackPanel Orientation="Horizontal">

                    <Grid Width="{Binding Width, ElementName=stckPanel1}"
                          Margin="0,50,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="550" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1">

                            <StackPanel Orientation="Horizontal">
                                <Border Height="53"
                                        Width="303"
                                        CornerRadius="5"
                                        Background="LightGray"
                                        x:Name="borderOfWriteBox">
                                    <TextBox x:Name="tboxWrite"
                                             Height="50"
                                             Loaded="tboxWrite_Loaded"
                                             Width="300"
                                             VerticalContentAlignment="Center"
                                             FontSize="25"
                                             Padding="5,0,0,0"
                                             TextChanged="tboxWrite_TextChanged"
                                             BorderBrush="Transparent"
                                             BorderThickness="0"
                                             Background="LightGray"
                                             PreviewKeyDown="tboxWrite_PreviewKeyDown" />
                                </Border>


                                <Label x:Name="lblTimer"
                                       VerticalAlignment="Center"
                                       Content="60"
                                       Width="50"
                                       Height="40"
                                       Style="{StaticResource TimerTextBlockTheme}"
                                       Background="#3c4d5c"
                                       Foreground="White"
                                       Margin="20,0,0,0" />

                                <Button Click="btnRefresh_Click"
                                        Width="50"
                                        Height="40"
                                        x:Name="btnRefresh"
                                        Margin="20,0,0,0"
                                        Background="#428bca"
                                        Foreground="White"
                                        Style="{StaticResource RefreshButtonTheme}">

                                </Button>

                            </StackPanel>

                        </Grid>

                    </Grid>

                </StackPanel>

            </StackPanel>


        </Grid>
    </Grid>

</Window>